<div class="container">
  <p id="notice"><%= notice %></p>
</div>

<div class="container">
  <div class="col-md-5">
    <div class="row">
     <h3><%= @post.title %></h3>
      <h6>Published on <%= @post.created_at.strftime('%b, %d %y') %></h6>
    </div>
    <div class="row">
      <p><%= @post.description %></p>
      <% if user_signed_in? %>
        <p><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-success" %> </p>
      <% end %>
      <p><%= link_to 'Back', posts_path, class: "btn btn-secondary" %></p>
    </div>
  </div>
</div>
